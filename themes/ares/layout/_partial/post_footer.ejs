<% if (post.prev || post.next) { %>
    <div class="post-footer">
        <span><%= __("update_time") %>: <%= post.date.format(__("datetime_format")) %></span>

        <% if (post.next) { %>
            <a class="pull-left" data-toggle="tooltip" data-placement="right"
               href="<%= url_for(post.next.path) %>" title="<%= post.next.title %>">
                <i class="glyphicon glyphicon-chevron-left"></i>
                <span><%= __("prev") %></span>
            </a>
        <% } %>

        <% if (post.prev) { %>
            <a class="pull-right" data-toggle="tooltip" data-placement="left"
               href="<%= url_for(post.prev.path) %>" title="<%= post.prev.title %>">
                <span><%= __("next") %></span>
                <i class="glyphicon glyphicon-chevron-right"></i>
            </a>
        <% } %>
    </div>
<% } %>
